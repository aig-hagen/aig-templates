%Blocks, 1 Blue and 1 Yellow Version for better variation and readability

\defineblockstyle{aigposterblockB}{
titlewidthscale=1, bodywidthscale=1,titleleft,
titleoffsetx=0pt, titleoffsety=0pt, bodyoffsetx=0mm, bodyoffsety=15mm,
bodyverticalshift=10mm, roundedcorners=0, linewidth=2pt,
titleinnersep=6mm, bodyinnersep=1cm
}{
\draw[color=aigblue, fill=blockbodybgcolor,
rounded corners=\blockroundedcorners] (blockbody.south west)
rectangle (blockbody.north east);
\ifBlockHasTitle
\draw[color=aigblue, fill=blocktitlebgcolor,
rounded corners=\blockroundedcorners] (blocktitle.south west)
rectangle (blocktitle.north east);
\fi
}


\defineblockstyle{aigposterblockY}{
titlewidthscale=1, bodywidthscale=1,titleleft, 
titleoffsetx=0pt, titleoffsety=0pt, bodyoffsetx=0mm, bodyoffsety=15mm,
bodyverticalshift=10mm, roundedcorners=0, linewidth=2pt,
titleinnersep=6mm, bodyinnersep=1cm
}{
\draw[color=aigyellow, fill=aigyellow!30!white,
rounded corners=\blockroundedcorners] (blockbody.south west)
rectangle (blockbody.north east);
\ifBlockHasTitle
\draw[color=aigyellow, fill=aigyellow, text=aigblue, 
rounded corners=\blockroundedcorners] (blocktitle.south west)
rectangle (blocktitle.north east);
\fi
}

\newcommand{\useblockstyleaigposterblockY}{\colorlet{blocktitlefgcolor}{aigblue} \useblockstyle{aigposterblockY}}

\newcommand{\useblockstyleaigposterblockB}{\colorlet{blocktitlefgcolor}{white} \useblockstyle{aigposterblockB}}
